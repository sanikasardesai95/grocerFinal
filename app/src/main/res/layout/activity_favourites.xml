<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Favourites">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_120dp"
        android:layout_margin="@dimen/pad_10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad_5dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:src="@drawable/food1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labenesse cheese"
                android:layout_marginStart="@dimen/pad_60dp"
                android:layout_marginTop="@dimen/pad_20dp"
                android:textSize="15sp"
                android:fontFamily="@font/muli"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:layout_marginStart="@dimen/pad_60dp"
                    android:drawableLeft="@drawable/rupee1"/>

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>