    <Button
        android:id="@+id/btnLogin"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginStart="@dimen/pad_300dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/pad_30dp"
        android:background="@drawable/back"
        android:fontFamily="@font/muli"
        android:text=" Login"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="@dimen/pad_150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/back"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingTop="@dimen/pad_5dp"
        android:paddingBottom="@dimen/pad_5dp"
        android:text=" Sign up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.ybq.android.spinkit.SpinKitView

        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />
</androidx.constraintlayout.widget.ConstraintLayout>